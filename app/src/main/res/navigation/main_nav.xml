<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav.xml"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kma.myapplication.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kma.myapplication.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_bookFragment"
            app:destination="@id/bookFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_educationProgramFragment"
            app:destination="@id/educationProgramFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_prizeFragment"
            app:destination="@id/prizeFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_scientificArticleFragment"
            app:destination="@id/scientificArticleFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_scientificResearchFragment"
            app:destination="@id/scientificResearchFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_staffFragment"
            app:destination="@id/staffFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_classFragment"
            app:destination="@id/classFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_examFragment"
            app:destination="@id/examFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_markExamFragment"
            app:destination="@id/markExamFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_monotorExamFragment"
            app:destination="@id/monotorExamFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_subjectFragment"
            app:destination="@id/subjectFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mainFragment_to_policyAndTermFragment"
            app:destination="@id/policyAndTermFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/bookFragment"
        android:name="com.kma.myapplication.ui.book.BookFragment"
        android:label="BookFragment" />
    <fragment
        android:id="@+id/educationProgramFragment"
        android:name="com.kma.myapplication.ui.education.EducationProgramFragment"
        android:label="EducationProgramFragment" />
    <fragment
        android:id="@+id/prizeFragment"
        android:name="com.kma.myapplication.ui.invention.InventionFragment"
        android:label="PrizeFragment" />
    <fragment
        android:id="@+id/scientificArticleFragment"
        android:name="com.kma.myapplication.ui.article.ScientificArticleFragment"
        android:label="ScientificArticleFragment" />
    <fragment
        android:id="@+id/scientificResearchFragment"
        android:name="com.kma.myapplication.ui.topic.TopicFragment"
        android:label="ScientificResearchFragment" />
    <fragment
        android:id="@+id/staffFragment"
        android:name="com.kma.myapplication.ui.staff.StaffFragment"
        android:label="StaffFragment" />
    <fragment
        android:id="@+id/classFragment"
        android:name="com.kma.myapplication.ui.managerclass.ClassFragment"
        android:label="ClassFragment" />
    <fragment
        android:id="@+id/examFragment"
        android:name="com.kma.myapplication.ui.managerexam.ExamFragment"
        android:label="ExamFragment" />
    <fragment
        android:id="@+id/markExamFragment"
        android:name="com.kma.myapplication.ui.managermark.MarkExamFragment"
        android:label="MarkExamFragment" />
    <fragment
        android:id="@+id/monotorExamFragment"
        android:name="com.kma.myapplication.ui.managerRoomExam.RoomExamFragment"
        android:label="MonotorExamFragment" />
    <fragment
        android:id="@+id/subjectFragment"
        android:name="com.kma.myapplication.ui.managerSubject.SubjectFragment"
        android:label="SubjectFragment" />
    <fragment
        android:id="@+id/policyAndTermFragment"
        android:name="com.kma.myapplication.ui.splash.PolicyAndTermFragment"
        android:label="PolicyAndTermFragment" >
        <argument
            android:name="param"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

</navigation>